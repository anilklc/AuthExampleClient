@model List<Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Role Management</h2>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Role Name</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                   
                    <td>
                        <a href="/Admin/Roles/UpdateRole/@role.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/Admin/Roles/DeleteRole/@role.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/Roles/CreateRole/" class="btn btn-primary">Add New Role</a>
</div>


